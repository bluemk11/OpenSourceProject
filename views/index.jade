extends layout

block hero-unit
  .jumbotron
    .container
      h1 OPEN-SOURCE PROJECT

block content
  .container
   p(style='margin-top:-12px')
       em.link

   .map_wrap
       #map(style='width:80%;height:600px;position:relative;overflow:hidden;float:left')

       ul#category
           li#BK9(data-order='0')
               span.category_bg.bank
               |             은행

           li#MT1(data-order='1')
               span.category_bg.mart
               |             마트

           li#PM9(data-order='2')
               span.category_bg.pharmacy
               |             약국

           li#OL7(data-order='3')
               span.category_bg.oil
               |             주유소

           li#CE7(data-order='4')
               span.category_bg.cafe
               |             카페

           li#CS2(data-order='5')
               span.category_bg.store
               |             편의점

        .option
            div
               form(style='float:left', onsubmit='searchPath(); return false;')
                         | 경로검색 :
                         input#path(type='text', value='', size='30')
                         button(type='submit') 검색하기
                         hr
               form(style='float:left', onsubmit='searchWeather(); return false;')
                         | 위도:
                         input#lat(type='text', value='', size='18')
                         | 경도:
                         input#lng(type='text', value='', size='18')
                         button(type='submit') 날씨 검색
                         hr
               form(onsubmit='searchPlaces2(); return false;')
                         | 키워드 :
                         input#keyword(type='text', value='', size='15')
                         button(type='submit') 검색하기
                         hr


       ul#placesList

       #pagination


   script(type='text/javascript', src='/js/map.js')
